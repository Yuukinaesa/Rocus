<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".nusantara">

    <!--Scrollview-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--PARENT LAYOUT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Nusantara ROM"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppinsbold"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!--nusantara1-->
            <androidx.cardview.widget.CardView
                android:onClick="nusantara1"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:contentPadding="20dp"
                android:layout_margin="20dp">

                <LinearLayout
                    android:id="@+id/nusantara1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:src="@drawable/nusantararom"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tentang Nusantara Project"
                        android:fontFamily="@font/poppinsbold"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailnusantara1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nusantaratext"
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--nusantara2-->
            <androidx.cardview.widget.CardView
                android:onClick="nusantara2"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:contentPadding="20dp"
                android:layout_margin="20dp">

                <LinearLayout
                    android:id="@+id/nusantara2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:src="@drawable/xiaomi"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download + Langkah Flashing"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinsbold"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:autoLink="all"
                        android:textColorLink="#FF0000"
                        android:id="@+id/detailnusantara2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiaominusa"
                        android:visibility="gone"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/poppins"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--nusantara3-->
            <androidx.cardview.widget.CardView
                android:onClick="nusantara3"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:contentPadding="20dp"
                android:layout_margin="20dp">

                <LinearLayout
                    android:id="@+id/nusantara3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:src="@drawable/realme"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download + Langkah Flashing"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinsbold"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:autoLink="all"
                        android:textColorLink="#FF0000"
                        android:id="@+id/detailnusantara3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realmenusa"
                        android:visibility="gone"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/poppins"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>